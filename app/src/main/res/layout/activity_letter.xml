                android:id="@+id/e_id"
                android:textColor="#48a191"
                android:textStyle="bold"
                android:textSize="50sp"
                android:text="E"
                android:background="#f069f2"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <Button
                android:id="@+id/f_id"
                android:textColor="#a08ded"
                android:textStyle="bold"
                android:textSize="50sp"
                android:text="F"
