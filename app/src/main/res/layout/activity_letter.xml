            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button

                android:id="@+id/asound_id"
                android:textColor="#da1e47"
                android:textStyle="bold"
                android:textSize="50sp"
                android:text="A"
                android:background="#60b471"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <Button
                android:id="@+id/b_id"
                android:textColor="#37873f"
                android:textStyle="bold"
                android:textSize="50sp"
                android:text="B"
                android:background="#f1c339"
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <Button
                android:id="@+id/c_id"
                android:textColor="#507adc"
                android:textStyle="bold"
                android:textSize="50sp"
