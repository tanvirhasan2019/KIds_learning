<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#f5ede1"
    android:weightSum="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credit">


    <LinearLayout
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="30dp"
            android:id="@+id/AminurSIRID"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    style="@style/Circularimageview"
                    android:src="@drawable/credit11"
                    app:civ_border_color="#242526"
                    app:civ_border_width="2dp" />
                <View
                    android:layout_margin="5dp"
                    android:background="#3b3a38"
                    android:layout_width="250dp"
                    android:layout_height="2dp">

                </View>

                <TextView
                    android:textColor="#5bbe6d"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:text="MR. MD. AMINUR RAHMAN \n LECTURER\n AHSANULLAH UNIVERSITY OF SCIENCE AND TECNOLOGY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </android.support.v7.widget.CardView>



    </LinearLayout>




    <LinearLayout
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="30dp"
            android:id="@+id/FatimaMAMID"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    style="@style/Circularimageview"
                    android:src="@drawable/credit22"
                    app:civ_border_color="#202320"
                    app:civ_border_width="2dp" />
                <View
                    android:layout_margin="5dp"
                    android:background="#3b3a38"
                    android:layout_width="250dp"
                    android:layout_height="2dp">

                </View>
                <TextView
                    android:gravity="center"
                    android:textColor="#5bbe6d"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:text="FATIMA MIRZA\n ADJUNCT FACULTY \n AHSANULLAH UNIVERSITY OF SCIENCE AND TECNOLOGY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </android.support.v7.widget.CardView>



    </LinearLayout>


</LinearLayout>